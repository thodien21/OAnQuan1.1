<Window x:Class="OAnQuan.IHM.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OAnQuan.IHM"
        mc:Ignorable="d"
        Title="SignIn" Height="350" Width="800">
    <Grid>
        <Label Content="Pseudo" HorizontalAlignment="Left" Margin="102,74,0,0" VerticalAlignment="Top" Width="138" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="txbPeuso" HorizontalAlignment="Left" Height="36" Margin="282,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Background="White" FontSize="16" BorderThickness="1,1,1,3" BorderBrush="#FF44AA23"/>

        <PasswordBox x:Name="txbPassword" HorizontalAlignment="Left" Height="36" Margin="282,123,0,0" VerticalAlignment="Top" Width="400" Background="White" FontSize="16" BorderThickness="1,1,1,3" BorderBrush="#FF44AA23"/>
        <Label Content="Mot de passe" HorizontalAlignment="Left" Margin="102,134,0,0" VerticalAlignment="Top" Width="138" FontSize="16" FontWeight="Bold"/>

        <Button x:Name="btnLogin" Content="Valider" HorizontalAlignment="Left" Height="42" Margin="311,220,0,0" VerticalAlignment="Top" Width="183" Click="BtnLogin_Click" FontSize="16" FontWeight="Bold" Background="#FF499B2A"/>
    </Grid>
</Window>
